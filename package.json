{
  "name": "labelbkict_gateway",
  "version": "1.0.0",
  "description": "gateway of the label.bkict.org project",
  "main": "main.ts",
  "scripts": {
    "generate": "./node_modules/.bin/proto-loader-gen-types --longs=Number --enums=Number --oneofs --grpcLib=@grpc/grpc-js --outDir=src/proto/gen src/proto/**/*.proto",
    "build": "npm run generate && tsc --build",
    "clean": "rm -r ./src/proto/gen && tsc --build --clean",
    "debug": "npm run build && npm run watch-debug",
    "lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx",
    "serve-debug": "nodemon --inspect dist/main.js",
    "serve": "node dist/main.js",
    "start": "node dist/main.js --prod",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/main.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "author": "tranhieu23.code@outlook.com",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.5.5",
    "@grpc/proto-loader": "^0.6.9",
    "brandi": "^4.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-openapi-validator": "^4.13.5",
    "http-status": "^1.5.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.6.0",
    "ts-protoc-gen": "^0.15.0",
    "typescript": "^4.6.2"
  }
}
